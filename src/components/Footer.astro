<style>
    .container {
        width: 100%;
        height: 100%;
        position: relative;
    }
    .footer {
        position: relative;
        background-color: rgba(255, 255, 255, 0.02);
        padding-left: 10%;
        padding-right: 10%;
        justify-content: center;
        gap: 8rem;	
        color: #E7E7F0;
        padding-top: 2rem;
        padding-bottom: 2rem;
        display: flex;
        flex-direction: row;
        z-index: 3;
    }
    .back {
        width: 100%;
        height: 100%;
        background-color: #140824;
        position: absolute;
        z-index: 1;
        top: 0;
        left: 0;
    }
    a {
        text-decoration: none;
        color: #ABADAF;
    }
    .left {
        flex-direction: row;
        gap: 4rem;
        height: 100%;
        display: grid;
        grid-template-rows: auto auto;
        grid-template-columns: repeat(3, 1fr);
    }
    .category {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        font-size: 1rem;
    }
    .socials {
        display: flex;
        flex-direction: row;
        gap: 1rem;
    }
    .information {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 0.9rem;
    }
    .information-links {
        display: flex;
        align-items: end;
        color: #ABADAF;
        font-size: 0.9rem;
    }
    .links {
        gap: 0.8rem;
        display: flex;
        flex-direction: column;
        color: #ABADAF;
    }
    .links a {
        font-size: 0.9rem;
    }
    .disclaimer {
        width: 35%;
        font-size: 1rem;
        color: #ABADAF;
        justify-content: space-between;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    @media only screen and (max-width: 1080px) {
		.disclaimer-text {
            display: none;
        }
        .footer {
            padding-left: 5%;
            padding-right: 5%;
            gap: 4rem;
        }
        .top {
            gap: 2rem;
        }
        .column {
            gap: 2rem;
        }
	}
    @media only screen and (max-width: 620px) {
        .footer {
            flex-direction: column;
            padding-left: 5%;
            padding-right: 5%;
            gap: 2rem;
        }
        .left {
            width: 100%;
        }
        .top {
            width: 100%;
            justify-content: space-between;
        }
        .column {
            height: 100%;
        }
        .disclaimer {
            width: 100%;
        }
    }
    @media only screen and (max-width: 480px) {
        .left {
            grid-template-columns: 1fr;
            grid-template-rows: auto auto auto;
            gap: 2.2rem;
        }
        .left > :nth-last-child(-n+2) {
            margin-top: -1.1rem;
        } 
        .disclaimer {
            width: 100%;
            display: flex;
            align-items: center;
        }
        .category {
            text-align: center;
            align-items: center;
        }
        .information {
            text-align: center;
            align-items: center;
        }
        .information-links {
            justify-content: center;
        }
    }
    .logo {
        display: flex;
        flex-direction: row;
        gap: 10px;
        align-items: center;
    }
    .logo img {
        height: 2.2rem;
    }
    .logo span {
        font-size: 1.6rem;
        font-weight: 700;
        color: #fff;
    }
    #purple {
        color: #8952E0;
    }
    
</style>