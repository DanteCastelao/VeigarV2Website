---
const { titleLeft, title, text, secondText } = Astro.props;
const hideTitleClass = !title ? 'hide-title' : '';
const hideTitleLeftClass = !titleLeft ? 'hide-title-left' : '';
const hideSecondTextClass = !secondText ? 'hide-text' : '';
---

<div class={`container ${hideTitleClass} ${hideSecondTextClass} ${hideTitleLeftClass}`}>
    <span class="title">{title}</span>
    <span class="title-left">{titleLeft}</span>
    <div class="texts">
        <span class="text">{text}</span>
        <span class="second-text">{secondText}</span>
    </div>
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        color: #fff;
        gap: 3rem;
        padding: 3rem;
        margin-left: 18%;
        margin-right: 18%;
        background-color: rgba(255, 255, 255, 0.02);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        margin-bottom: 2rem;
        z-index: 2;
    }
    .hide-title .title {
        display: none;
    }
    .hide-title-left .title-left {
        display: none;
    }
    .title-left {
        font-size: clamp(1.4rem, 5vw, 2rem);
        font-weight: 600;
        text-align: end;
    }
    .title {
        font-size: clamp(1.4rem, 5vw, 2rem);
        font-weight: 600;
    }
    .texts {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .text {
        font-size: 1.2rem;
        font-weight: 400;
        line-height: 160%;
    }
    .second-text {
        font-size: 1.2rem;
        font-weight: 400;
        line-height: 160%;
    }
    .hide-text .second-text {
        display: none;
    }
</style>